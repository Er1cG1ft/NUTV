        <h3>
          <i>New Project</i>
        </h3>
        <%= form_for(@project) do |p| %>
          <div class="field">
            <p>
              Name
            </p>
            <%= p.text_field :name %> <br>
            <p>
              Director
            </p>
            <%= p.text_field :director %> <br>
            <p>
              EP
            </p>
            <%= p.text_field :ep %> <br>
            <p>
              Equipment
            </p>
            <b>Video:</b> <br>
            <%= p.check_box :equipment, { :multiple => true }, '5D #1', nil %> 5D #1
            <%= p.check_box :equipment, { :multiple => true }, '5D #2', nil %> 5D #2
            <%= p.check_box :equipment, { :multiple => true }, '7D #1', nil %> 7D #1
            <%= p.check_box :equipment, { :multiple => true }, '7D #2', nil %> 7D #2 <br>
            <%= p.check_box :equipment, { :multiple => true }, 'XF100 #1', nil %> XF100 #1
            <%= p.check_box :equipment, { :multiple => true }, 'XF100 #2', nil %> XF100 #2 <br>
            <b>Audio:</b> <br>
            <%= p.check_box :equipment, { :multiple => true }, 'Zoom #1', nil %> Zoom #1
            <%= p.check_box :equipment, { :multiple => true }, 'Zoom #2', nil %> Zoom #2
            <%= p.check_box :equipment, { :multiple => true }, 'Zoom #3', nil %> Zoom #3 <br>
            <%= p.check_box :equipment, { :multiple => true }, 'Lav Mic #1', nil %> Lav Mic #1
            <%= p.check_box :equipment, { :multiple => true }, 'Lav Mic #2', nil %> Lav Mic #2
            <%= p.check_box :equipment, { :multiple => true }, 'DSLR Mounted Shotgun Mic #1', nil %> DSLR Mounted Shotgun Mic #1 <br>
            <%= p.check_box :equipment, { :multiple => true }, 'DSLR Mounted Shotgun Mic #2', nil %> DSLR Mounted Shotgun Mic #2 
            <%= p.check_box :equipment, { :multiple => true }, 'DSLR Mounted Shotgun Mic #3', nil %> DSLR Mounted Shotgun Mic #3 <br>
            <%= p.check_box :equipment, { :multiple => true }, 'Shotgun Mic', nil %> Shotgun Mic
            <%= p.check_box :equipment, { :multiple => true }, 'Handheld Mic', nil %> Handheld Mic
            <%= p.check_box :equipment, { :multiple => true }, 'Boom Stick', nil %> Boom Stick <br>
            <b>Lenses:</b> <br>
            <%= p.check_box :equipment, { :multiple => true }, '35mm', nil %> 35mm
            <%= p.check_box :equipment, { :multiple => true }, '50mm #1', nil %> 50mm #1
            <%= p.check_box :equipment, { :multiple => true }, '50mm #2', nil %> 50mm #2
            <%= p.check_box :equipment, { :multiple => true }, '85mm', nil %> 85mm
            <%= p.check_box :equipment, { :multiple => true }, '28-135mm', nil %> 28-135mm (Kit Lens) <br>
            <%= p.check_box :equipment, { :multiple => true }, '17-50mm', nil %> 17-50mm (Tamron)
            <%= p.check_box :equipment, { :multiple => true }, '70-300mm', nil %> 70-300mm (Telephoto)
            <%= p.check_box :equipment, { :multiple => true }, '14mm', nil %> 14mm (Wide Angle)
            <%= p.check_box :equipment, { :multiple => true }, 'Tilt-Shift', nil %> Tilt-Shift <br>
            <b>Mounts:</b> <br>
            <%= p.check_box :equipment, { :multiple => true }, 'Shoulder Rig', nil %> Shoulder Rig
            <%= p.check_box :equipment, { :multiple => true }, 'Monopod', nil %> Monopod
            <%= p.check_box :equipment, { :multiple => true }, 'Short Manfrotto Tripod', nil %> Short Manfrotto Tripod
            <%= p.check_box :equipment, { :multiple => true }, 'Velbon Tripod', nil %> Velbon Tripod (with feet) <br>
            <%= p.check_box :equipment, { :multiple => true }, 'Magnus VT-4000 #1', nil %> Magnus VT-4000 #1
            <%= p.check_box :equipment, { :multiple => true }, 'Magnus VT-4000 #2', nil %> Magnus VT-4000 #2
            <%= p.check_box :equipment, { :multiple => true }, 'Magnus VT-4000 #3', nil %> Magnus VT-4000 #3
            <p>
              Status
            </p>
            <%= p.select :status, [['Writing','Writing'],['Shooting','Shooting'],['Editing','Editing'],['Completed','Completed']] %> <br>
            <p>
              Notes
            </p>
            <%= p.text_area :notes, { :class => 'notesarea' } %> <br>  <br>

            <input type="checkbox" name="event" value="Event" id="eventbox">Add Event<br> <br>
            <div id="addevent" class="hidden">
            <%= p.fields_for :events do |event| %>
                
                Type: <%= event.select :kind, [['Writing Meeting','writing'],['Shoot','shoot'],['Editing Meeting','editing']] %> <br>
                
                Date: <%= event.date_field :date %> <br>
            
                Start Time: <%= event.time_field :starttime %> <br>
              
                End Time: <%= event.time_field :endtime %> <br> <br>
                  
            <% end %>
            </div>
        </div>
      
