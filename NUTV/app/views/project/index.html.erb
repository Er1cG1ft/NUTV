          <br>
          <b>Directors:</b> <br>
          Kitty Cheung <br>
          Connor Lewis
        </p>
      </div>
      <div class="eprojects">
        <div id="tabs" class="tab-nav">
          <a href="#" id="listlink" class="tab-nav-link is-active">List View</a>
          <a href="#" id="progresslink" class="tab-nav-link">Progress View</a>
          <a href="#" id="calendarlink" class="tab-nav-link">Calendar View</a>
       </div>
      <div class="c-tab hide" id="listtab">
         <table class="etable">                         
          <tr>                          
            <th>Name</th>
            <th>Director</th>
            <th>EP</th>
            <th>Equipment</th>
            <th>Date Started</th>
            <th>Status</th>
          </tr>
        <% @projects.each do |p| %>
          <tr>
            <td><%= p.name %></td>
            <td><%= p.director %></td>
            <td><%= p.ep %></td>
            <td><%= p.equipment %></td>
            <td><%= p.dates %></td>
            <td><%= p.status %></td>
          </tr>
        <% end %>      
        </table> 
        </div>
      </div>
      <div class="c-tab" id="progresstab">
        <div class="column" id="c1">
          <div class="title">
            <h3>
              Writing
            </h3>
          </div>
          <table>
            <% @projects.each do |p| %>
            <% if p.status == "Writing" %>
