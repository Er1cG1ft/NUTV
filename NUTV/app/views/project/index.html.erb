          <i>New Project</i>
        </h3>
        <%= form_for(@project) do |p| %>
          <div class="field">
            <p>
              Name
            </p>
            <%= p.text_field :name %> <br>
            <p>
              Director
            </p>
            <%= p.text_field :director %> <br>
            <p>
              EP
            </p>
            <%= p.text_field :ep %> <br>
            <p>
              Equipment
            </p>
            <%= p.text_area :equipment %> <br>
            <p>
              Dates
            </p>
            <%= p.text_area :dates %> <br>
            <p>
              Status
            </p>
            <%= p.text_field :status %>
        </div>
        <div class="create">
          <%= p.submit "Create" %>
        </div>
        <% end %>
      </div>
